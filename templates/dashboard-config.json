{
  "dashboardName": "QA Optimization Dashboard",
  "description": "Dashboard demonstrating improved defect tracking and test cycle time",
  "gadgets": [
    {
      "type": "Created vs Resolved Chart",
      "title": "Created vs Resolved Issues",
      "filter": "project = PROJ"
    },
    {
      "type": "Burndown Chart",
      "title": "Sprint Burndown",
      "sprint": "Current sprint"
    },
    {
      "type": "Pie Chart",
      "title": "Issues by Status",
